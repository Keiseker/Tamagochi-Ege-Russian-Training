<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/theory_background">

    <Button
        android:id="@+id/backtotask5_7_15_1720"
        android:background="@drawable/back_btn"

        android:layout_width="90dp"
        android:layout_height="95dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="95dp"
        android:layout_marginRight="10dp"
        android:background="#DCDCDC" />

    <TextView
        android:id="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="105dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Укажите номера предложений, в которых верно передана ГЛАВНАЯ информация, содержащаяся в тексте. Запишите номера этих предложений слитно - без пробелов и запятых"
        android:textColor="@android:color/background_dark"
        android:gravity="center"
        android:background="#ffffff"
        android:textSize="20sp" />



    <TextView
        android:id="@+id/answer1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="265dp"
        android:background="#ffffff"
        android:text="1) При беге и прыжках кошка испытывает наименьшее сопротивление воздуха."
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/answer_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="580dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textColor="@android:color/background_dark"
        android:background="#ffff"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="650dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:textColor="@android:color/background_dark"
        android:background="@drawable/card_btn"
        android:text="Подтвердить"/>

</RelativeLayout>