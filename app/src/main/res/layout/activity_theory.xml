<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theory_background">

    <Button
        android:id="@+id/back_theory"
        android:layout_width="86dp"
        android:layout_height="98dp"
        android:background="@drawable/back_btn"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/previous"
        android:layout_width="111dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/card_btn"
        android:text="назад"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/next"
        android:layout_width="111dp"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/card_btn"
        android:text="вперед"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="253dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:textColor="#d87978"
        android:text="Задание 17"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="397dp"
        android:layout_height="610dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/before"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/title_rule"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="26sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"/>
            <TextView
                android:id="@+id/title_rule1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="26sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/explanation1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"/>
            <TextView
                android:id="@+id/title_rule2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="26sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/explanation2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"/>
            <TextView
                android:id="@+id/explanation3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"/>
            <ImageView
                android:id="@+id/table"
                android:layout_width="390dp"
                android:layout_height="292dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Полезные ссылки"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="26sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/links"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:autoLink="all"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"/>

            <Button
                android:id="@+id/go_to_task"
                android:layout_width="166dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/card_btn"
                android:textColor="@android:color/background_dark"
                android:text="Приступить к заданию"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>