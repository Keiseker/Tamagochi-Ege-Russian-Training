<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theory_background">

    <Button
        android:id="@+id/backtotask2425"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:background="@drawable/back_btn" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#DCDCDC"
        android:layout_marginTop="90dp"/>


    <EditText
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="640dp"
        android:textColor="@android:color/background_dark"
        android:layout_marginRight="75dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:textColor="@android:color/background_dark"
        android:background="@drawable/card_btn"
        android:layout_marginTop="680dp"
        android:text="Подтвердить" />



    <ScrollView
        android:id="@+id/my_scroll"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="390dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_task"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:text="Среди данные предложения,найдите такое(-ие), которое(-ые) связано(-ы) с предыдущим при помощи притяжательного местоимения. Напишите номер(-а) этого(-их) предложения(-ий)."
                android:textColor="@android:color/background_dark"
                android:gravity="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/show_text"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff"
                android:text="@string/Show_text_all"
                android:textColor="#090949"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="#dcdcdc"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/hide_text"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:text="@string/Hide_text_all"
                android:background="#dcdcdc"
                android:textColor="#090949"
                android:textSize="20sp"
                android:visibility="gone" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>